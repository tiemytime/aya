# Production environment variables for AYA Frontend
# Copy this file to .env.production and fill in your actual production values

NODE_ENV=production

# Backend API Configuration
# Replace with your actual production backend URL
REACT_APP_API_URL=https://your-backend-domain.com
VITE_API_URL=https://your-backend-domain.com

# WebSocket Configuration (if using WebSockets)
# Replace with your actual production WebSocket URL
REACT_APP_WS_URL=wss://your-backend-domain.com

# News Configuration
# Refresh interval in milliseconds (300000 = 5 minutes)
REACT_APP_NEWS_REFRESH_INTERVAL=300000
# Maximum number of news events to display
REACT_APP_MAX_NEWS_EVENTS=200

# Globe Configuration
# Set to false for production to reduce CPU usage
REACT_APP_GLOBE_AUTO_ROTATE=false

# Prayer Features
# Enable audio prayer generation
REACT_APP_ENABLE_AUDIO_PRAYERS=true

# Analytics and Monitoring (Optional)
# Add your Sentry DSN for error tracking
REACT_APP_SENTRY_DSN=your-sentry-dsn-here
# Add your Google Tag Manager ID for analytics
REACT_APP_GTM_ID=GTM-XXXXXXX

# Security (Optional)
# Enable HTTPS-only features in production
REACT_APP_ENABLE_HTTPS_ONLY=true
# Enable secure cookies in production
REACT_APP_ENABLE_SECURE_COOKIES=true
